            <!-- admin details -->
            
        <div class="container-fluid bg-light">
            <!---make an appointment section--->
           <div class="card mb-3"style="width: 100%;">
                <div class="row g-0">
                    <div class="col-md-4">
                            <img src="img/appointment.png" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8 text-center" style="padding: 5%;">
                            <div class="card-body">
                                <h5 class="card-title">WELCOME TO MEDIAC</h5>
                                <p class="card-text text-dark">Feel free to connect with the best healthcare service compromising of professional service excellence with outstanding personal service.</p>
                                <!--<a class="btn btn-outline-dark" href="doctorlist.html" role="button" >MAKE AN APPOINTMENT</a>-->
                                <a class="btn btn-outline-dark" href="/doctorlist" role="button" >SEE DOCTOR LIST</a>
                                <button class="btn btn-outline-dark" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">MAKE AN APPOINTMENT</button>
                                    <div class="offcanvas offcanvas-end bg-dark" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
                                      <div class="offcanvas-header">
                                        <button type="button" class="btn-close btn-close-white text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                                      </div>
                                      <div class="offcanvas-body text-light">
                                        <!---<p>To procced further choose the department you want to be taken care from:</p>-->
                                        <h6 class="text-light">MAKE AN APPOINTMENT</h6>
                                        <form action="/appointmentform" method="POST">
                                            <div class="form-group row" style="padding-top: 5%;">
                                                <label for="department" class="col-sm-5 col-form-label"><h6 class="text-light">DEPARTMENT</h6></label>
                                            <div class="col-sm-6">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="department" id="exampleRadios1" value="option1">
                                                <label class="form-check-label" for="exampleRadios1">EYE CARE</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="department" id="exampleRadios2" value="option2">
                                                <label class="form-check-label" for="exampleRadios2">DENTAL CARE</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="department" id="exampleRadios3" value="option3">
                                                <label class="form-check-label" for="exampleRadios3">PHYSICAL CARE</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="department" id="exampleRadios3" value="option3">
                                                <label class="form-check-label" for="exampleRadios3">NEURO CARE</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="department" id="exampleRadios3" value="option3">
                                                <label class="form-check-label" for="exampleRadios3">SURGERY SERVICE</label>
                                            </div>
                                        </div>
                                        </div>
                                        <div class="form-floating mb-3" style="padding-top: 5%;" data-bs-toggle="tooltip" data-bs-placement="left" title="You can find your desired doctor's id from DOCTOR LIST">
                                            <label for="id" class="text-dark" >Doctor ID</label>
                                            <input type="text" class="form-control" id="id" name="id" required id="id">
                                        </div>
                                        <div class="form-floating mb-3" style="padding-top: 5%;"  >
                                            <label for="pid" class="text-dark" >Patient ID</label>
                                            <input type="text" class="form-control" id="pid" name="pid" required id="pid">
                                        </div>
                                        <div class="form-floating mb-3" style="padding-top: 5%;" >
                                            <label for="date" class="text-dark">CHOOSE DATE</label>
                                            <input type="date" class="form-control" id="date" name="date" required id="date" >
                                        
                                        </div>
                                        <div class="form-floating mb-3" style="padding-top: 5%;" >
                                            <label for="time" class="text-dark">CHOOSE TIME</label>
                                            <input type="time" class="form-control" id="time" name="time" required id="time">
                                        
                                        </div>
                                        <div class="form-group" style="padding-top: 5%;">
                                            <div class="alert alert-dark" role="alert">
                                                Your request for an appointment will be pending, you can see your appointment status at any time in <a href="appointment.html" class="alert-link">APPOINTMENTS</a> section
                                            </div>
                                            <!--<p class="text-light">Your request for an appointment will be pending, you can see your appointment status at any time in APPOINTMENTS section</p>-->
                                            <button type="submit" class="btn btn-outline-primary mx-auto">SUBMIT</button>
                                        </div>
                                        </form>
                                      </div>
                                    </div>
                            </div>
                    </div>
                </div>
            </div>
    




            <!----personal info section--->
            <div class="card" style="width: 100%;">
              <!--<img src="..." class="card-img-top" alt="...">-->
              <div class="card-body">
                <h5 class="card-title">Personal Information</h5>
                <form action="/patientdata" method="POST">
                    <table class="table table-dark table-hover table-bordered text-center>
                    <colgroup>
                        <col span="2" style="background-color:black;">
                            <col style="background-color:white">
                    </colgroup>
                        <tr>
                            <td>PATIENT ID</td>
                            <td><%= row[0][0] %></td>
                        </tr>
                        <tr>
                            <td>PASSWORD</td>
                            <td><%= row[0][7] %></td>
                        </tr>
                        <tr>
                            <td>NAME</td>
                            <td><%= row[0][1] %></td>
                        </tr>
                        <tr>
                            <td>GUARDIAN Name</td>
                            <td><%= row[0][2] %></td>
                        </tr>
                        <tr>
                            <td>AGE</td>
                            <td><%= row[0][3] %></td>
                        </tr>
                        <tr>
                            <td>GENDER</td>
                            <td><%= row[0][8] %></td>
                        </tr>
                        <tr>
                            <td>ADDRESS</td>
                            <td><%= row[0][4] %></td>
                        </tr>
                        <tr>
                            <td>PHONE NUMBER</td>
                            <td><%= row[0][5] %></td>
                        </tr>
                        <tr>
                            <td>GUARDIAN'S PHONE NUMBER</td>
                            <td><%= row[0][6] %></td>
                        </tr>
                        
                </table>
                </form>
              </div>
            </div>
            
        </div>



   



